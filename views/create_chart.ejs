	<div class="bg-contact2" style="background-image: url('/images/bg-01.jpg');">
		<div class="container-contact2">
			<div class="wrap-contact2">
				<form action="/create_chart" class="contact2-form validate-form" method="post">
					<span class="contact2-form-title">
						Write a medical chart
					</span>
                    <p style="text-align: right">reception time: <%= time %></p>

					<div class="wrap-input2 validate-input" data-validate="Patient id is required">
                        <input type="hidden" name="time" value="<%= time %>">
						<input class="input2" type="text" name="patientid">
						<span class="focus-input2" data-placeholder="Patient ID"></span>
					</div>

					<div class="wrap-input2 validate-input" data-validate = "Symptom is required">
						<input class="input2" type="text" name="symptom">
						<span class="focus-input2" data-placeholder="Symptom"></span>
					</div>

					<div class="wrap-input2 validate-input" data-validate = "diagnosis code is required">
						<input class="input2" type="text" name="diagnosiscode">
						<span class="focus-input2" data-placeholder="Diagnosis Code"></span>
					</div>
                    
                    
                    <div class="validate-input" data-validate = "Prescription is required">
						<select name="unit">
                            <option value="">Select prescription unit</option>
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                        </select>
					</div>
                    

					<div class="container-contact2-form-btn">
						<div class="wrap-contact2-form-btn">
							<div class="contact2-form-bgbtn"></div>
							<button type="submit" class="contact2-form-btn">
								Register
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>




