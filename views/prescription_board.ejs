<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
    <style>
        .navbar-brand{
          color: #7AACB3;
      }
        .wrap-contact2{
            width: 1000px;
            height: auto;
        }
        td{
            padding: 10px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
  <nav class="navbar bg-dark fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/logo60.png" />MIS | Pharmacy</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
      </button>
      <li class="nav-item">
        <a class="nav-link" href="/logout">logout</a>
      </li>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/login/pharmacy">Real time prescription board</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

	<div class="bg-contact2" style="background-image: url('/images/bg-03.jpg');">
		<div class="container-contact2">
			<div class="wrap-contact2">
				
					<span class="contact2-form-title">
						Prescription Board (Real time)
					</span>
                    <div style = "overflow: scroll;">
                     <% for(var i=0;i<results.length;i++){ %>
                                        <div style="display: inline-block; border: 1px solid; float: left; padding: 10px; border-radius: 0.5em;">
                                            <span style="color: #7AACB4;">Receipt time</span><br/>
                                            <span><%= results[i].p_receipt_time %></span><br/>
                                            <span style="color: #7AACB4;">Patient id</span><br/>
                                            <span><%= results[i].patient_id %></span><br/>
                                            <table style="text-align: center;">
                                                <tr>
                                                    <td style="color: #7AACB4;">Pill code</td>
                                                    <td style="color: #7AACB4;">Pill name</td>
                                                    <td style="color: #7AACB4;">Unit</td>
                                                </tr>
                                                <tr>
                                                    <td><%= results[i].pill_code %></td>
                                                    <td><%= results[i].pill_name %></td>
                                                    <td><%= results[i].prsc_unit %></td>
                                                </tr>
                                            </table><br/>
                                            <form action="/delete_pres" method="post">
                                                <input type=hidden name="id" value="<%= results[i].chart_no %>">
                                            <input style="float: right;" type="submit" value="Finish">
                                            </form>
                                       
                                        </div>
                        <%    } %>
                </div>
                   
                    

				
			</div>
		</div>
	</div>




<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
