<!DOCTYPE html>
<html lang="en">
<head>
	<title>Patient Page</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
    <style>
        .navbar-brand{
          color: #7AACB3;
      }
        .wrap-contact2{
            width: 1000px;
            height: auto;
        }
        td{
            padding: 10px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
  <nav class="navbar bg-dark fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/logo60.png" />MIS | Patient</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
      </button>
      <li class="nav-item">
        <a class="nav-link" href="/logout">logout</a>
      </li>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/update">Update profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/login/patient">View prescriptions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/view_receipt">View receipts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/send_receipt">Send receipts</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

	<div class="bg-contact2" style="background-image: url('/images/bg-02.jpg');">
		<div class="container-contact2">
			<div class="wrap-contact2">
				
					<span class="contact2-form-title">
						Prescription
					</span>
                    <table border=1 style="margin: auto; text-align: center;">
                          <tr>
                            <td>Receipt time</td>
                            <td><%= result.h_receipt_time %></td>
                            <td rowspan="2">Hospital</td>
                            <td>Name</td>
                            <td><%= result.hospital_name %></td>
                          </tr>
                          <tr>
                            <td>Patient Name</td>
                            <td><%= result.patient_name %></td>
                            <td>Contact</td>
                            <td><%= result.contact %></td>
                          </tr>
                          <tr>
                            <td colspan="5">The disease classification symbol is not listed when the patient's request is made.</td>
                          </tr>
                          <tr>
                            <td colspan="2">Pill code</td>
                            <td colspan="2">Pill name</td>
                            <td>Prescription Unit</td>
                          </tr>
                          <tr>
                            <td colspan="2"><%= result.pill_code %></td>
                            <td colspan="2"><%= result.pill_name %></td>
                            <td><%= result.prsc_unit %></td>
                          </tr>
                    </table>
                    <form action="/pharmacy_tran" method="post">
                    <div class="input-group mb-4" style="padding: 20px 350px;">
                      <select name="pharmacy" align="center">
                            <option value="">Select pharmacy</option>
                            <% for(var i=0;i<pharmacies.length;i++){ %>
                                <option value="<%= pharmacies[i].pharmacy_id %>"><%= pharmacies[i].pharmacy_id %></option>                                                    
                            <% } %>
                        </select>
                        <input type="hidden" value="<%= result.h_receipt_time %>" name="time">
                        <input type="hidden" value="<%= result.pill_code %>" name="pillcode">
                        <input type="hidden" value="<%= result.prsc_unit %>" name="unit">
                        <input type="submit" value="SEND">
                    </div>
                        
                    </form>
                   <div class="container-contact2-form-btn">
						<div class="wrap-contact2-form-btn">
							<div class="contact2-form-bgbtn"></div>
							<a href='/login/patient'><button type="submit" class="contact2-form-btn">
								Back
                            </button></a>
						</div>
					</div>
                    

				
			</div>
		</div>
	</div>
<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/js/main.js"></script>

