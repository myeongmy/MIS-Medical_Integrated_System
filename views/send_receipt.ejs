    <style>
        .navbar-brand{
          color: #7AACB3;
      }
        .wrap-contact2{
            width: 1000px;
            height: auto;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
  <nav class="navbar bg-dark fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/logo60.png" />MIS | Patient</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
      </button>
      <li class="nav-item">
        <a class="nav-link" href="/logout">logout</a>
      </li>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/update">Update profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/login/patient">View prescriptions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/view_receipt">View receipts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/send_receipt">Send receipts</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

	<div class="bg-contact2" style="background-image: url('/images/bg-02.jpg');">
		<div class="container-contact2">
			<div class="wrap-contact2">
				
					<span class="contact2-form-title">
						Send my receipts
					</span>
                    <span style="font-weight: bold;">Patient Profile</span><br/>
                        <span>ID  |  <%= patient.patient_id %></span><br/>
                        <span>Name  |  <%= patient.patient_name %></span><br/>
                        <span>Age   |  <%= patient.age %></span><br/>
                        <span>Contact |  <%= patient.contact %></span><br/><br/>
                
                        <span style="font-weight: bold;">Medical Expense Record (In recent order)</span><br/><br/>
                        <form action="/insurance_tran/<%= results.length %>" method="post">
                        <div style="overflow: auto">
                        <table style="margin: auto; text-align: center;">
                            <tr height="30" style="color: #7AACB4;">
                                <td>Select</td>
                                <td>Date</td>
                                <td>Hospital name</td>
                                <td>Symptom</td>
                                <td>Diagnosis</td>
                                <td>Total expense</td>
                            </tr>
                            <% for(var i=0;i<results.length;i++) { %>
                                <tr height="30">
                                    <td><input type="checkbox" name="box" value="<%= i %>"></td>
                                    <td><%= results[i].h_receipt_time %></td>
                                    <td><%= results[i].hospital_name %></td>
                                    <td><%= results[i].symptom %></td>
                                    <td><%= results[i].diagnosis_name %></td>
                                    <td><%= results[i].expense %></td>
                                </tr>
                           <% } %>
                        </table>
                </div>
                
                    <div class="input-group mb-4" style="padding: 20px 350px;">
                      <select name="insurancecompany" align="center">
                            <option value="">Select insurance company</option>
                            <% for(var i=0;i<companies.length;i++){ %>
                                <option value="<%= companies[i].insurance_id %>"><%= companies[i].insurance_id %></option>                                                    
                            <% } %>
                        </select>
                        
                        <input type="submit" value="Share">
                    </div>
                        
                    </form>
                   
                
			</div>
		</div>
	</div>




