	<div class="bg-contact2" style="background-image: url('/images/bg-02.jpg');">
		<div class="container-contact2">
			<div class="wrap-contact2">
				<form action="/update_fin" class="contact2-form validate-form" method="post">
					<span class="contact2-form-title">
						Update my profile
					</span>

					<div class="wrap-input2 validate-input" data-validate="Patient id is required">
						<input class="input2" type="text" name="patientid" value="<%= result[0].patient_id %>">
						<span class="focus-input2" data-placeholder="Patient ID"></span>
					</div>

					<div class="wrap-input2 validate-input" data-validate = "Password is required">
						<input class="input2" type="text" name="patientpw" value="<%= result[0].patient_pw %>">
						<span class="focus-input2" data-placeholder="Password"></span>
					</div>

					<div class="wrap-input2 validate-input" data-validate = "Patient name is required">
						<input class="input2" type="text" name="patientname" value="<%= result[0].patient_name %>">
						<span class="focus-input2" data-placeholder="Name"></span>
					</div>
                    
                    <div class="wrap-input2 validate-input" data-validate="Age is required">
						<input class="input2" type="text" name="patientage" value="<%= result[0].age %>">
						<span class="focus-input2" data-placeholder="Age"></span>
					</div>
                    
                    <div class="wrap-input2 validate-input" data-validate="Contact is required">
						<input class="input2" type="text" name="patientcontact" value="<%= result[0].contact %>">
						<span class="focus-input2" data-placeholder="Contact"></span>
					</div>
                    

					<div class="container-contact2-form-btn">
						<div class="wrap-contact2-form-btn">
							<div class="contact2-form-bgbtn"></div>
							<button type="submit" class="contact2-form-btn">
								Update
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>




